page {
  background-color: #F3F4F5;
}
.content {
  width: 100%;
  padding: 20rpx 30rpx 0rpx;
  box-sizing: border-box;
}
.contentitem {
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 34rpx;
}
.contentitem > text {
  border-bottom: 1rpx solid #eee;
  display: block;
  font-size: 32rpx;
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 20rpx;
  font-weight: 700;
}
.card {
  padding-left: 20rpx;
  color: #999;
  font-size: 30rpx;
  margin-top: 30rpx;
}
.item {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
}
.item > view {
  flex: 1 1 50%;
}
.item > view text:last-child {
  color: #000;
}
.center {
  padding-left: 20rpx;
  color: #999;
  font-size: 30rpx;
  padding-bottom: 36rpx;
  margin-top: 16rpx;
}
.center view:first-child {
  margin-bottom: 16rpx;
}
.center > view text:last-child {
  color: #000;
}

.fourstage {
  background-color: #fff;
}
.tab {
  display: flex;
  justify-content: space-around;
  align-items: center;
  color: #999;
  font-size: 34rpx;
  height: 90rpx;
  border-bottom: 1rpx solid #eee;
}
.tab > view {
  line-height: 90rpx;
}
.active {
  color: #147AE0;
  border-bottom: 4rpx solid #147AE0;
}
